{
    "name": "typescript-startup",
    "version": "0.0.1",
    "description": "Typescript Startup project",
    "author": "Johan Herscheid",
    "dependencies": {
        "systemjs": "^0.19.28"
    },
    "devDependencies": {
        "concurrently": "^3.4.0",
        "lite-server": "^2.3.0",
        "typescript": "^2.2.2"
    },
    "scripts": {
        "start": "tsc && concurrently \"npm run tsc:w\" \"npm run lite\" ",
        "lite": "lite-server",
        "tsc": "tsc",
        "tsc:w": "tsc -w"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module"
        }
    },
    "jshintConfig": {
        "esversion": 6
    }
}
